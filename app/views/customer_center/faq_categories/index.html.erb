<section id="faq_category_main" class="sub_main">
	<div class="section_top">
		<h1><%=@controller_name %></h1>
		<p class="path"><%=link_to_home %> &gt; <span>고객센터</span> &gt; <strong><%=@controller_name %></strong></p>	
	</div>
	<table>
  		<tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>
	<% @faq_categories.each do |faq_category| %>
  <tr>
    <td><%= faq_category.title %></td>
    <td><%= link_to '수정', edit_customer_center_faq_category_path(faq_category) %></td>
    <td><%= link_to '삭제', customer_center_faq_category, method: :delete, data: { confirm: '정말로 삭제합니까?' } %></td>
  </tr>
	<% end %>
	</table>
	
	<div id="sl_bottom_menu">
		<% if user_signed_in? %>
		<% if current_user.admin? %>
		<%= link_to 'FAQ 분류 생성',new_customer_center_faq_category_path %> &nbsp; | &nbsp; <%= link_to 'FAQ',customer_center_faqs_path %>
		<% end %>
		<% end %>
	<div class="flickr_pagination"><%= paginate @faq_categories %></div>	
	</div>
</section>