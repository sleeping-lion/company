<section id="slboard_notice_main" class="sub_main">
	<div class="section_top">
		<h2><%=@controller_name %></h2>
		<p class="path"><%=link_to '홈으로',root_path,:title=>'홈으로' %>  &gt; <strong><%=@controller_name %></strong></p>		
	</div>
	<table width="100%" cellpadding="0" cellspacing="0" class="slboard_list">
		<colgroup>
			<col />
			<col width="100px" />
			<col width="100px" />
		</colgroup>
		<thead>
			<tr>
				<th><p class="sl_name">제목</p></th>
				<th class="sl_right"><p class="sl_registered_date">등록일</p></th>
				<th class="sl_right"><p class="sl_management">관리</p></th>
			</tr>
		</thead>
		<tbody>
			<tr class="none">
				<td><p class="sl_name"></p></td>
				<td class="sl_right"><p class="sl_registered_date"></p></td>
				<td class="sl_center"><p></p></td>
			</tr>
			<% if(@admin_template_softwares.length>0) %>
			<% @admin_template_softwares.each do |template_software| %>
			<tr>
				<td><p class="sl_name"><%= link_to template_software.name, notice  %></p></td>
				<td class="sl_right"><p class="sl_registered_date"><%=getFormatDate(template_software.created_at.to_s) %></p></td>
				<td class="sl_center">
					<p>
						<% if(template_software.enable==1) %>가능<% else %>불가능<% end %>
						<%=link_to '수정',edit_admin_template_software_path(template_software) %>
						<%=link_to '삭제',admin_template_software_path(template_software), method: :delete, data: { confirm: '정말로 삭제합니까?' } %>
					</p>					
				</td>
			</tr>
			<% end %>			
			<% else %>
			<tr>
				<td colspan="4"><p>글이 없습니다.</p></td>
			</tr>
			<% end %>
		</table>
		<div id="sl_bottom_menu">
	<% if user_signed_in? %>
	<% if current_user.admin? %>			
		<%= link_to '글쓰기', new_admin_template_software_path %>
	<% end %>
	<% end %>
			<div class="flickr_pagination">
				<%= paginate @admin_template_softwares %>
  		</div>
	</div>
</section>