<% if history %>
<%= render :partial => 'layouts/history',:locals=>{:history=>history} %>
<% end %>
<section id="sl_history_show">
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @history.title %></h3>
			<p><%=t(:label_name) %> :<%= @history.user.name %>&nbsp;&nbsp;&nbsp; <%=t(:label_creatd_at) %> : <%= @history.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%= simple_format(@history.history_content.content) %></div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_list),histories_path %>
		<% if user_signed_in? %>
		<% if current_user.admin? %>
		&nbsp; | &nbsp; <%= link_to t(:link_edit), edit_history_path(@history) %> &nbsp; | &nbsp; <%= link_to t(:link_delete), @history, method: :delete, data: { confirm: t(:delete_confirm)} %>
		<% end %>
		<% end %>
	</div>
</section>
